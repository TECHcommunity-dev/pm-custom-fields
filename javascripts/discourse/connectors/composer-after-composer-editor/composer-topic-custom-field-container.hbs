{{#if this.composerComponent.isPrivateMessage}}
    <div class="custom-field">
        <label for="custom-field-input">Product Name:</label>
        {{#if this.composerComponent.customFieldValue}}
        <input value=this.composerComponent.customFieldValue id="custom-field-input" placeholder="Type here product name…">
        {{/if}}
        {{#else}}
        <input id="custom-field-input" placeholder="Type here product name…">
        {{/else}}
        <span class="error-message" style="display: none; color: red;">This field is required.</span>
    </div>
{{/if}}
